---
import BaseLayout from './BaseLayout.astro';
import NeuralNetworkBackground from '../components/NeuralNetworkBackground.astro';

const { title = "Dashboard" } = Astro.props;
---

<BaseLayout title={title}>
    <div class="relative min-h-screen flex flex-col items-center justify-center overflow-hidden py-12 px-4 sm:px-6 lg:px-8">
        <NeuralNetworkBackground /> {/* Tu fondo animado */}

        <main class="relative z-10 bg-gray-900 bg-opacity-80 p-8 rounded-lg shadow-2xl max-w-7xl w-full text-white space-y-8 border border-cyan-700/50">
            <slot />
        </main>
    </div>
</BaseLayout>

<style is:global>
    /* Puedes a√±adir estilos globales si es necesario */
    /* Por ejemplo, para asegurar que el HTML y Body ocupen el 100% */
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        font-family: 'Inter', sans-serif; /* O tu fuente preferida */
    }
</style>